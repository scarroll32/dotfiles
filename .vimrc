set nocompatible

set number
"set relativenumber
set showcmd
set showmode
set visualbell
set backspace=indent,eol,start
set hidden
set autoread

set ignorecase
set smartcase
set title
set ruler
set history=1000
set wildmode=list:longest
set directory=tmp,/tmp

syntax on

set autoindent
set tabstop=2
set softtabstop=2

" key mappings
" I to cycle
let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_winsize = 25
let g:netrw_localrmdir = 'rm -r'
